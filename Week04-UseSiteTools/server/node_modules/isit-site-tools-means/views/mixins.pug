mixin bootswatch-superhero
    link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/superhero/bootstrap.min.css")

mixin bootswatch-slate
    link(href='https://maxcdn.bootstrapcdn.com/bootswatch/3.3.6/slate/bootstrap.min.css', rel='stylesheet')

mixin mainMenu()
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Elvenware
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
            li.trigger-collapse(ng-class="{ active: isActive('/')}")
                a(href='/') Home
            li
              a(href='/about.html') About

mixin logo()
    figure
        img(alt='Elvenware', class="elf-normal", src='/images/elvenwarelogo.png')



